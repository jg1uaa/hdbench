style "ruler"
{
  font = "-adobe-helvetica-medium-r-normal--*-80-*-*-*-*-*-*"
}

style "default"
{
    fontset = "8x16,r16,kanji16"
#   fontset = "-misc-fixed-medium-r-normal--14-*-*-*-*-*-*"
#   fontset = "r16,-*-gothic-medium-r-*--17-*-*-*-c-*"
}

widget_class "*Ruler*" style "ruler"
widget_class "*" style "default"
